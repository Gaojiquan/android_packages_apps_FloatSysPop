<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:statusbar="http://schemas.android.com/apk/res/com.focus.statusbar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:orientation="horizontal">

			<ImageView
				android:id="@+id/popupmenu"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:visibility="gone"
				android:src="@drawable/float_popup_menu" />

			<FrameLayout
				android:id="@+id/function_menu"
				android:visibility="gone"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" >


				<com.focus.statusbar.policy.CircleBattery
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					/>

				<com.focus.statusbar.policy.KeyButtonView
				    android:id="@+id/sys_button_menu"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="left|center"
				    android:scaleType="center"
				    android:src="@drawable/ic_sys_menu"
				    statusbar:keyCode="82" />

				<com.focus.statusbar.policy.KeyButtonView
				    android:id="@+id/sys_button_home"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center|center"
				    android:scaleType="center"
				    android:src="@drawable/ic_sys_home"
				    statusbar:keyCode="3" />

				<com.focus.statusbar.policy.KeyButtonView
				    android:id="@+id/sys_button_back"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="right|center"
				    android:scaleType="center"
				    android:src="@drawable/ic_sys_back"
				    statusbar:keyCode="4" />

				<com.focus.statusbar.policy.KeyButtonView
				    android:id="@+id/systemsleep"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="top|center"
				    android:scaleType="center"
				    android:src="@drawable/stat_sleep"
				    statusbar:keyCode="26" />

				<ImageView
					android:id="@+id/switchme"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="bottom|center"
					android:layout_marginBottom="3dip"
				        android:scaleType="center"
					android:src="@drawable/switchme" />


			</FrameLayout>

</LinearLayout>
